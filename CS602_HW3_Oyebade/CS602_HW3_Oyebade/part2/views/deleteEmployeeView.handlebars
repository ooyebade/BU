<div class="table-responsive">
  <form method="post" action='/employees/delete/{{data.id}}'>
    <table class="table table-condensed">
      <tbody>
        <tr>
          <th>First Name: </td>
          <td>{{data.firstName}}</td>
        </tr>
        <tr>
          <th>Last Name: </td>
          <td>{{data.lastName}}</td>
        </tr>       
      </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
              <input type="submit" value="OK" class="btn btn-success">
              <input type="button" value="Cancel" class="btn btn-danger"
                  class="cancel" onclick="cancelDelete()">
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</div>
